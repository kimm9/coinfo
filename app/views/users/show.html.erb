  <div class="userRow1 row">
    <div class="col s12 m6">
      <h3><%= @user.name %>'s Portfolios</h3>
      <% @portfolios.each do |entry| %>
      <div class="card blue-grey darken-1"><center>
        <div class="card-content white-text">
          <span class="card-title"><h3><%= entry.title %></h3></span>
          <p>If you have no cryptocurrencies in your portfolio, you will be redirected to a Search Page.</p>
        </div>
        <div class="card-action">
          <%= link_to ("VIEW"), portfolio_path(entry.id) %>
          <%= link_to ("DELETE"), portfolio_path(entry.id),:data => {:confirm => "You sure?", :method => "delete"} %>
        </div>
      </div>
      <% end %>
    </div>
  </div>

</div>
